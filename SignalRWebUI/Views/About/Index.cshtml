@using SignalRWebUI.Dtos.AboutDtos
@using SignalRWebUI.Dtos.AboutDtos
@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategory Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz:
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutId</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}
							</tbody>
						</table>
						<a href="/About/CreateAbout" class="btn btn-outline-primary"> Hakkımda Ekle</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

