		<script type="text/javascript">

			$(document).ready(() => {

				var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7031/SignalRHub").build();
				$("#connstatus").text(connection.state);

				connection.start().then(() => {
					$("#connstatus").text(connection.state);
					setInterval(() => {
						connection.invoke("SendDashboard");
						
					}, 1000);

				}).catch((err) => { console.log(err) });


				connection.on("ReceiveDashboard", data => {
					$("#categoryCount").text(data.categoryCount);
					$("#productCount").text(data.productCount);
				$("#activeCategoryCount").text(data.activeCategoryCount);
				$("#passiveCategoryCount").text(data.passiveCategoryCount);
					$("#productCountByCategoryNameHamburger").text(data.productCountByCategoryNameHamburger);
					$("#productCountByCategoryNameDrink").text(data.productCountByCategoryNameDrink);
					$('#productPriceAvg').text(data.productPriceAvg + " $");
					$('#productNameByMaxPrice').text(data.productNameByMaxPrice);
					$('#productNameByMinPrice').text(data.productNameByMinPrice);
					$('#totalOrderCount').text(data.totalOrderCount);
					$('#activeOrderCount').text(data.activeOrderCount);
					$('#lastOrderPrice').text(data.lastOrderPrice);
					$('#totalMoneyCaseAmount').text(data.totalMoneyCaseAmount + " $");
					$('#todayTotalPrice').text(data.todayTotalPrice + " $");
					$('#menuTableCount').text(data.menuTableCount);

				});
				
			});

		</script>

